<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="phpunit.xsd"
    bootstrap="vendor/autoload.php"
    colors="true"
    cacheDirectory=".phpunit.cache"
    displayDetailsOnIncompleteTests="true"
    displayDetailsOnSkippedTests="true"
    stopOnFailure="false"
    failOnRisky="false"
    failOnWarning="false"
    executionOrder="depends,defects"
>

    <!-- ğŸŒ Environment -->
    <php>
        <env name="OBJECT_FOUNDATION_BRAND" value="Smartresponsor"/>
        <env name="OBJECT_FOUNDATION_OWNER" value="Marketing America Corp &amp; Partners"/>
        <env name="APP_ENV" value="test"/>
        <env name="APP_DEBUG" value="1"/>
    </php>

    <!-- ğŸ§© Test suites -->
    <testsuites>
        <testsuite name="ObjectFoundation Unit &amp; Kernel Tests">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <!-- ğŸ“‚ Source + exclusions -->
    <source>
        <include>
            <directory>src</directory>
        </include>
        <exclude>
            <directory>var/metrics</directory>
            <directory>var/runtime</directory>
        </exclude>
    </source>

    <!-- ğŸ“Š Coverage -->
    <coverage>
        <report>
            <clover outputFile="build/coverage.xml"/>
            <html outputDirectory="build/coverage-html"/>
        </report>
    </coverage>

    <!-- ğŸ§ª Logging -->
    <logging>
        <testdoxText outputFile="php://stdout"/>
    </logging>

</phpunit>
